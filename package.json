{
  "name": "@exactly-protocol/protocol",
  "version": "0.2.5",
  "license": "BUSL-1.1",
  "homepage": "https://exact.ly",
  "repository": "github:exactly/protocol",
  "scripts": {
    "lint": "run-s --continue-on-error lint:**",
    "lint:sol": "solhint '{contracts,test}/**/*.sol'",
    "lint:ts": "tsc",
    "lint:es": "eslint --ext .ts,.js,.cjs,.mjs .",
    "fix:sol": "prettier -w '{contracts,test}/**/*.sol'",
    "compile": "hardhat compile",
    "snapshot": "forge snapshot --no-match-test testFuzz",
    "test": "run-s --continue-on-error test:**",
    "test:foundry": "forge test",
    "test:hardhat": "hardhat test --deploy-fixture",
    "coverage": "run-s coverage:**",
    "coverage:foundry": "forge coverage --report lcov",
    "coverage:hardhat": "hardhat coverage",
    "coverage:foundry:snapshot": "forge snapshot --no-match-test testFuzz --check",
    "coverage:foundry:fuzzer": "FOUNDRY_PROFILE=production forge test --match-test testFuzz",
    "deploy:mainnet": "hardhat --network mainnet deploy",
    "deploy:goerli": "hardhat --network goerli deploy",
    "postinstall": "run-s --continue-on-error postinstall:** || cd .",
    "postinstall:foundry": "forge install",
    "postinstall:hardhat": "hardhat compile --force"
  },
  "files": [
    "contracts",
    "deployments",
    "hardhat.config.ts"
  ],
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.8.0",
    "@openzeppelin/contracts-upgradeable": "^4.8.0",
    "solmate": "transmissions11/solmate#v7"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@changesets/types": "^5.2.1",
    "@ethersproject/abi": "5.7.0",
    "@gnosis.pm/safe-core-sdk": "^3.2.0",
    "@gnosis.pm/safe-core-sdk-types": "^1.7.0",
    "@gnosis.pm/safe-ethers-lib": "^1.7.0",
    "@gnosis.pm/safe-service-client": "^1.4.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/hardhat-upgrades": "^1.21.0",
    "@openzeppelin/upgrades-core": "^1.20.5",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "@tenderly/hardhat-tenderly": "^1.3.2",
    "@typechain/ethers-v5": "^10.1.1",
    "@typechain/hardhat": "^6.1.4",
    "@types/chai": "^4.3.4",
    "@types/eslint": "^8.4.10",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.11",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-deprecation": "^1.3.3",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.2",
    "hardhat": "2.12.3",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.22",
    "hardhat-gas-reporter": "^1.0.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "^1.0.0",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.3"
  },
  "resolutions": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13"
  }
}
