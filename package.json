{
  "name": "@exactly-finance/protocol",
  "scripts": {
    "lint:ts": "eslint --ext .ts,.js,.cjs,.mjs .",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "fix:sol": "solhint 'contracts/**/*.sol' --fix",
