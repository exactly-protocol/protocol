{
  "name": "@exactly-protocol/protocol",
  "version": "0.0.1-dev",
  "scripts": {
    "lint": "run-s --continue-on-error lint:**",
    "lint:sol": "solhint '{contracts,test}/**/*.sol'",
    "lint:ts": "tsc",
    "lint:es": "eslint --ext .ts,.js,.cjs,.mjs .",
    "fix:sol": "prettier -w '{contracts,test}/**/*.sol'",
    "compile": "hardhat compile",
    "snapshot": "FOUNDRY_PROFILE=snapshot forge snapshot",
    "test": "run-s --continue-on-error test:**",
    "test:foundry": "forge test",
    "test:hardhat": "hardhat test --deploy-fixture",
    "coverage": "run-s --continue-on-error coverage:**",
    "coverage:foundry": "FOUNDRY_PROFILE=production forge coverage --report lcov",
    "coverage:foundry:snapshot": "FOUNDRY_PROFILE=snapshot forge snapshot --check",
    "coverage:hardhat": "hardhat coverage",
    "coverage:merge": "sed -i '' \"s|$(pwd)/||g\" coverage/lcov.info && lcov-result-merger '{.,coverage}/lcov.info' coverage/lcov.info && rm lcov.info",
    "deploy:rinkeby": "hardhat --network rinkeby deploy",
    "postinstall": "run-s --continue-on-error postinstall:** || cd .",
    "postinstall:foundry": "forge install",
    "postinstall:hardhat": "hardhat compile --force"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@chainlink/contracts": "0.4.2",
    "@openzeppelin/contracts": "4.7.2",
    "solmate": "transmissions11/solmate#v7"
  },
  "devDependencies": {
    "@gnosis.pm/safe-core-sdk": "^2.3.2",
    "@gnosis.pm/safe-core-sdk-types": "^1.4.0",
    "@gnosis.pm/safe-ethers-lib": "^1.4.0",
    "@gnosis.pm/safe-service-client": "^1.2.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts-upgradeable": "^4.7.2",
    "@openzeppelin/hardhat-upgrades": "^1.19.1",
    "@openzeppelin/upgrades-core": "^1.17.0",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.1",
    "@types/eslint": "^8.4.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.9",
    "hardhat": "2.10.1",
    "hardhat-deploy": "^0.11.12",
    "hardhat-gas-reporter": "^1.0.8",
    "lcov-result-merger": "^3.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-dev.23",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  }
}
