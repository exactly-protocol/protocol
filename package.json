{
  "name": "@exactly-finance/protocol",
  "scripts": {
    "lint": "run-s --continue-on-error lint:**",
    "lint:es": "eslint --ext .ts,.js,.cjs,.mjs .",
    "lint:sol": "solhint '{contracts,test}/**/*.sol'",
    "fix:sol": "prettier -w '{contracts,test}/**/*.sol'",
    "compile": "hardhat compile",
    "snapshot": "forge snapshot",
    "test": "run-s --continue-on-error test:**",
    "test:foundry": "forge test",
    "test:hardhat": "hardhat test --deploy-fixture",
    "coverage": "run-s --continue-on-error coverage:**",
    "coverage:foundry:test": "FOUNDRY_PROFILE=production forge test",
    "coverage:foundry:snapshot": "forge snapshot --check",
    "coverage:hardhat": "hardhat coverage",
    "deploy:kovan": "hardhat --network kovan deploy",
    "deploy:hardhat": "hardhat --network hardhat deploy",
    "postinstall": "run-s --continue-on-error postinstall:** || cd .",
    "postinstall:foundry": "forge install",
    "postinstall:hardhat": "hardhat compile --force"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@chainlink/contracts": "0.4.1",
    "@openzeppelin/contracts": "4.6.0",
    "@rari-capital/solmate": "rari-capital/solmate#v7"
  },
  "devDependencies": {
    "@gnosis.pm/safe-core-sdk": "^2.1.0",
    "@gnosis.pm/safe-core-sdk-types": "^1.1.0",
    "@gnosis.pm/safe-ethers-lib": "^1.1.0",
    "@gnosis.pm/safe-service-client": "^1.1.2",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.1",
    "@types/eslint": "^8.4.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.0.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.7",
    "hardhat": "2.9.3",
    "hardhat-deploy": "^0.11.10",
    "hardhat-gas-reporter": "^1.0.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.8.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.4"
  }
}
